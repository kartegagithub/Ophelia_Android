<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EADialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PickerTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PickerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PickerTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundedDialog">
        <item name="android:background">@drawable/dialog_btn_rounded</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AlertDialog.AppCompat.CircleBackground">
        <item name="android:background">@drawable/dialog_circle</item>
    </style>

    <style name="rippleClickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="rippleClickableBorderless">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="EAPickerCheckBox">
        <item name="colorControlNormal">@color/ea_picker_check_box_color_control_normal</item>
        <item name="colorControlActivated">@color/ea_picker_check_box_color_control_activated</item>
    </style>
</resources>